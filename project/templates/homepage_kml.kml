{% load i18n %}<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
    <Document>
    <name>Konnen KML</name>
        <Style id="chlorineLevelNone">
            <IconStyle>
                <Icon>
                    <href>http://{{ current_site.domain }}{{ STATIC_URL }}image/map-marker-icons/drinking-water-none.png</href>
                </Icon>
            </IconStyle>
        </Style>
        <Style id="chlorineLevelZero">
            <IconStyle>
                <Icon>
                    <href>http://{{ current_site.domain }}{{ STATIC_URL }}image/map-marker-icons/drinking-water-zero.png</href>
                </Icon>
            </IconStyle>
        </Style>
        <Style id="chlorineLevelLow">
            <IconStyle>
                <Icon>
                    <href>http://{{ current_site.domain }}{{ STATIC_URL }}image/map-marker-icons/drinking-water-low.png</href>
                </Icon>
            </IconStyle>
        </Style>
        <Style id="chlorineLevelPass">
            <IconStyle>
                <Icon>
                    <href>http://{{ current_site.domain }}{{ STATIC_URL }}image/map-marker-icons/drinking-water-pass.png</href>
                </Icon>
            </IconStyle>
        </Style>
        <Style id="chlorineLevelHigh">
            <IconStyle>
                <Icon>
                    <href>http://{{ current_site.domain }}{{ STATIC_URL }}image/map-marker-icons/drinking-water-high.png</href>
                </Icon>
            </IconStyle>
        </Style>

        <Folder>
            {% for location in locations %}
                <Placemark>
                    <name>{{ location.title }}</name>
                    <description><![CDATA[
                        {% if user_is_authenticated %}
                            <p>
                                {% trans "Chlorine Level:" %} {{ location.chlorine_level }}% <br />
                                {% if location.uid %}{% trans "Location ID:" %} {{ location.uid }} <br />{% endif %}
                                <strong><a href="{{ location.get_absolute_url }}">{% trans "Details" %}&raquo;</a></strong>
                            </p>
                        {% endif %}
                    ]]></description>
                    <Point>
                        <coordinates>{{ location.longitude }},{{ location.latitude }},0</coordinates>
                    </Point>
                    <styleUrl>
                        {% if location.chlorine_level_status == 'none' %}
                            #chlorineLevelNone
                        {% endif %}
                        {% if location.chlorine_level_status == 'zero' %}
                            #chlorineLevelZero
                        {% endif %}
                        {% if location.chlorine_level_status == 'low' %}
                            #chlorineLevelLow
                        {% endif %}
                        {% if location.chlorine_level_status == 'pass' %}
                            #chlorineLevelPass
                        {% endif %}
                        {% if location.chlorine_level_status == 'high' %}
                            #chlorineLevelHigh
                        {% endif %}
                    </styleUrl>
                </Placemark>
            {% endfor %}
        </Folder>
    </Document>
</kml>